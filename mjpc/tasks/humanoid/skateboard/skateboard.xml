<mujoco model="skateboard">
  <default>
    <default class="skateboard">
      <default class="truck">
        <geom type="capsule" size="0.03" rgba="0.4414 0.4727 0.4922 1"/>
      </default>
      <default class="hanger">
        <!-- TODO(hartikainen): need to fix the orientation for the bodies previously -->
        <!-- welded by these fixed joints. -->
        <!-- <joint type="fixed" pos="0.0 0.0 0.0" axis="0 1 0" range="-45 45"/> -->
        <geom type="capsule" fromto="0.0 0.1 -0.05 0.0 -0.1 -0.05" size="0.015" rgba="0.4414 0.4727 0.4922 1"/>
      </default>
      <default class="wheel">
        <!-- TODO(hartikainen): need to fix the orientation for the bodies previously -->
        <!-- welded by these fixed joints. -->
        <!-- <joint type="fixed" pos="0.0 0.0 0.0" axis="0 1 0" range="-45 45"/> -->
        <geom type="sphere" size="0.03" rgba="0.8867 0.2383 0.5781 1"/>
      </default>
    </default>
  </default>

  <worldbody>
    <body name="skateboard" pos="1 0 0.1">
      <freejoint/>

      <!-- board -->
      <geom name="board" type="box" size="0.3 0.13 0.01" rgba="0.5859 0.4336 0.1992 1"/>
      <geom name="nose" type="box" size="0.075 0.13 0.01" pos="0.35 0.0 0.01" quat="-0.9659 0 0.1588 0" rgba="0.5859 0.4336 0.1992 1"/>
      <geom name="tail" type="box" size="0.075 0.13 0.01" pos="-0.35 0.0 0.01" quat="0.9659 0 0.1588 0" rgba="0.5859 0.4336 0.1992 1"/>

      <!-- trucks -->
      <geom name="nosetruck" class="truck" fromto="0.20 0.0 -0.020 0.30 0.0 -0.020"/>
      <geom name="tailtruck" class="truck" fromto="-0.20 0.0 -0.020 -0.30 0.0 -0.020"/>

      <!-- front hanger TODO(hartikainen): front or read? -->
      <body name="hanger1" pos="0.25 0.0 -0.01">
        <!-- <joint name="hanger1_joint" class="hanger"/> -->
        <geom name="hanger1_geom" class="hanger"/>
        <!-- left wheel TODO(hartikainen): left or right? -->
        <body name="wheel1" pos="0.0 0.1 -0.05">
          <joint name="wheel1_joint" class="wheel"/>
          <geom name="wheel1_geom" class="wheel"/>
        </body>
        <!-- right wheel TODO(hartikainen): left or right? -->
        <body name="wheel2" pos="0.0 -0.1 -0.05">
          <joint name="wheel2_joint" class="wheel"/>
          <geom name="wheel2_geom" class="wheel"/>
        </body>
      </body>

      <!-- rear hanger TODO(hartikainen): front or read? -->
      <body name="hanger2" pos="-0.25 0.0 -0.01">
        <!-- <joint name="hanger2_joint" class="hanger"/> -->
        <geom name="hanger2_geom" class="hanger"/>
        <!-- left wheel TODO(hartikainen): left or right? -->
        <body name="wheel3" pos="0.0 0.1 -0.05">
          <joint name="wheel3_joint" class="wheel"/>
          <geom name="wheel3_geom" class="wheel"/>
        </body>
        <!-- right wheel TODO(hartikainen): left or right? -->
        <body name="wheel4" pos="0.0 -0.1 -0.05">
          <joint name="wheel4_joint" class="wheel"/>
          <geom name="wheel4_geom" class="wheel"/>
        </body>
      </body>
    </body>
  </worldbody>
</mujoco>
