<mujoco model="skateboard">
  <default>
    <default class="skateboard">
      <default class="truck">
        <geom type="capsule" size="0.03" rgba="0.4414 0.4727 0.4922 1"/>
      </default>
      <default class="hanger">
        <!-- TODO(hartikainen): need to fix the orientation for the bodies previously -->
        <!-- welded by these fixed joints. -->
        <!-- <joint type="fixed" pos="0.0 0.0 0.0" axis="0 1 0" range="-45 45"/> -->
        <geom type="capsule" fromto="0.0 0.1 -0.05 0.0 -0.1 -0.05" size="0.015" rgba="0.4414 0.4727 0.4922 1"/>
      </default>
      <default class="wheel">
        <!-- TODO(hartikainen): need to fix the orientation for the bodies previously -->
        <!-- welded by these fixed joints. -->
        <!-- <joint type="fixed" pos="0.0 0.0 0.0" axis="0 1 0" range="-45 45"/> -->
        <geom type="sphere" size="0.03" rgba="0.8867 0.2383 0.5781 1"/>
      </default>
    </default>
  </default>

  <worldbody>
    <body name="skateboard" pos="1 0 0.1">
      <freejoint/>

      <!-- board -->
      <geom name="board-base" type="box" size="0.3 0.13 0.01" rgba="0.5859 0.4336 0.1992 1"/>
      <geom name="board-nose" type="box" size="0.075 0.13 0.01" pos="0.35 0.0 0.01" quat="-0.9659 0 0.1588 0" rgba="0.5859 0.4336 0.1992 1"/>
      <geom name="board-tail" type="box" size="0.075 0.13 0.01" pos="-0.35 0.0 0.01" quat="0.9659 0 0.1588 0" rgba="0.5859 0.4336 0.1992 1"/>

      <!-- trucks -->
      <geom name="truck-nose" class="truck" fromto="0.20 0.0 -0.020 0.30 0.0 -0.020"/>
      <geom name="truck-tail" class="truck" fromto="-0.20 0.0 -0.020 -0.30 0.0 -0.020"/>

      <!-- TODO(hartikainen): front or rear? -->
      <body name="hanger-front" pos="0.25 0.0 -0.01">
        <geom name="hanger-front" class="hanger"/>
        <!-- TODO(hartikainen): left or right? -->
        <body name="wheel-front-left" pos="0.0 0.1 -0.05">
          <joint name="wheel-front-left" class="wheel"/>
          <geom name="wheel-front-left" class="wheel"/>
        </body>
        <!-- TODO(hartikainen): left or right? -->
        <body name="wheel-front-right" pos="0.0 -0.1 -0.05">
          <joint name="wheel-front-right" class="wheel"/>
          <geom name="wheel-front-right" class="wheel"/>
        </body>
      </body>

      <!-- TODO(hartikainen): front or rear? -->
      <body name="hanger-rear" pos="-0.25 0.0 -0.01">
        <geom name="hanger-rear" class="hanger"/>
        <!-- TODO(hartikainen): left or right? -->
        <body name="wheel-rear-left" pos="0.0 0.1 -0.05">
          <joint name="wheel-rear-left" class="wheel"/>
          <geom name="wheel-rear-left" class="wheel"/>
        </body>
        <!-- TODO(hartikainen): left or right? -->
        <body name="wheel-rear-right" pos="0.0 -0.1 -0.05">
          <joint name="wheel-rear-right" class="wheel"/>
          <geom name="wheel-rear-right" class="wheel"/>
        </body>
      </body>
    </body>
  </worldbody>
</mujoco>
